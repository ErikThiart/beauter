{
  "name": "beauter",
  "version": "0.2",
  "description": "A simple framework for faster and beautiful responsive sites",
  "homepage": "http://beauter.outboxcraft.com",
    "repository": {
    "type": "git",
    "url": "https://github.com/outboxcraft/beauter.git"
  },
  "license": "MIT",
  "author": "Shubham Ramdeo <ramdeo.shubham@gmail.com>",
  "main": "beauter.css",
  "engines": {
		"node": ">=4"
	},
	"keywords": [
		"css",
		"css3",
		"front-end",
		"framework",
		"html",
		"html5",
		"kickstarter",
		"responsive",
		"mobile",
		"mobile-first",
		"responsive",
	],
  	        "ignore": [
                ".gitattributes",
		".travis.yml",
                "LICENSE",
                "README.md",
                 "beauter.min.css",
		"package.json",
	],
		"devDependencies": {
		"autoprefixer": "^6.5.4",
		"ava": "^0.17.0",
		"backstopjs": "^2.3.5",
		"banner-cli": "^0.11.0",
		"browser-sync": "^2.18.5",
		"editorconfig-tools": "^0.1.1",
		"eslint": "^3.14.0",
		"eslint-config-styled": "^0.0.0",
		"husky": "^0.11.9",
		"node-sass": "^3.13.1",
		"npm-run-all": "^2.3.0",
		"nyc": "^10.0.0",
		"onchange": "^2.5.0",
		"postcss-cli": "^2.6.0",
		"rimraf": "^2.5.4",
		"sass-lint": "^1.10.2"
	},
		"scripts": {
		"start": "run-p build watch serve",
		"build": "run-s clean sass autoprefixer banner",
		"clean": "rimraf dist",
		"sass": "node-sass --output-style expanded src/milligram.sass dist/milligram.css && node-sass --output-style compressed beauter.css beauter.min.css",
		"autoprefixer": "postcss -u autoprefixer --no-map.inline --autoprefixer.browsers \"last 1 versions\" -r *.css",
		"banner": "banner-cli dist/*.css",
		"watch": "onchange src -- run-p build",
		"serve": "browser-sync start --no-notify -s test --ss dist -f dist",
		"backstop": "run-s build && run-p serve compare",
		"reference": "backstop reference --configPath=backstop.conf.js",
		"compare": "backstop test --configPath=backstop.conf.js",
		"lint": "sass-lint -c .sasslintrc src --verbose --no-exit && eslint test -c styled && editorconfig-tools check .",
		"ava": "nyc ava",
		"test": "run-s build lint ava",
		"precommit": "run-p test"
	}
}
